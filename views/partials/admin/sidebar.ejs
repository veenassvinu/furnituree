<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Furniture</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body>


  <style>
    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #2c7a7b;
      color: white;
      padding: 20px;
      /* position: fixed; */
      left: 0;
      top: 0;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    .sidebar a {
      display: block;
      text-decoration: none;
      color: white;
      margin: 10px 0;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .sidebar a:hover {
      background-color: #285e61;
    }
  </style>
  <div class="sidebar">
    <h2>Furniture.</h2>
    <a href="/admin/Dashboard">Dashboard</a>
    <a href="/admin/User">User Management</a>
    <a href="/admin/product">Product Management</a>
    <a href="/admin/addproduct">Add Product</a>
    <a href="/admin/order">Order Management</a>
    <a href="/admin/coupon">Coupon Management</a>
    <a href="/admin/offer">offer Management</a>
    <a href="/admin/category">Category Management</a>

    <a type="button" onclick="confirmLogout()">Logout</a>



  </div>

  <script>


    function confirmLogout() {
      Swal.fire({
        title: 'Are you sure?',
        text: "You will be logged out of your session.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, logout',
        cancelButtonText: 'Cancel',
      }).then((result) => {
        if (result.isConfirmed) {
          fetch('/admin/adminLogout', {  // Changed route to match typical Express pattern
            method: 'GET',
            credentials: 'include'
          })
            .then((response) => {
              if (response.ok) {
                return response.json();
              } else {
                throw new Error(`Logout failed with status: ${response.status}`);
              }
            })
            .then((data) => {
              if (data.success) {
                Swal.fire({
                  icon: 'success',
                  title: 'Logged out!',
                  text: 'You have been successfully logged out.',
                  showConfirmButton: false,
                  timer: 1500,
                }).then(() => {
                  window.location.href = '/admin/admin-login';
                });
              } else {
                throw new Error(data.message || "Unknown error");
              }
            })
            .catch((error) => {
              console.error('Logout error:', error);
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to log out. Please try again.',
              });
            });
        }
      });
    }

  </script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>