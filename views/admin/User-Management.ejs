<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Furniture - User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #4a4a4a;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background-color: white;
            padding: 20px;
        }

        .sidebar h2 {
            margin: 0 0 20px;
        }

        .sidebar a {
            display: block;
            text-decoration: none;
            color: white;
            margin: 10px 0;
        }

        .sidebar a:hover {
            background-color: #285e61;
            padding: 10px;
            border-radius: 5px;
        }

        .logo {
            font-size: 24px;
            color: #5cc6ba;
            margin-bottom: 30px;
        }

        .nav-item {
            padding: 12px 0;
            color: #333;
            cursor: pointer;
            font-size: 14px;
        }

        .nav-item:hover {
            color: #5cc6ba;
        }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            padding: 20px;
            background-color: white;
            margin: 20px;
            border-radius: 8px;
        }

        /* Search Bar */
        .search-container {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .search-input {
            flex: 1;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .search-button {
            padding: 10px 20px;
            background-color: #0099ff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* User Table */
        .user-table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        .user-table th,
        .user-table td {
            padding: 15px 10px;
            border-bottom: 1px solid #eee;
            text-align: center;
            width: 33.33%;
            word-wrap: break-word;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            vertical-align: middle;
        }

        .ban-button {
            padding: 8px 12px;
            background-color: #f0f0f0;
            color: #333;
            border: 1px solid #ddd;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s;
        }

        .ban-button:hover {
            background-color: #ffcccc;
            color: #000;
        }

        .ban-button:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .top-bar {
            background-color: #5cc6ba;
            padding: 15px;
            color: white;
            font-size: 20px;
            border-radius: 4px 4px 0 0;
            display: flex;
            justify-content: space-between;
        }

        .controls {
            display: flex;
            gap: 10px;
        }

        .control-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .green-dot {
            background-color: #4CAF50;
        }

        .red-dot {
            background-color: #f44336;
        }

        .btn-view {
            padding: 8px 14px;
            background-color: #5cc6ba;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        .btn-view:hover {
            background-color: #38b2ac;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        }

        .btn-view:active {
            background-color: #319795;
        }

        .pagination {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .pagination-button {
            padding: 5px 10px;
            background-color: #0099ff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .pagination-button.disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }
    </style>


    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Optional JavaScript (for components like modals, dropdowns, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div style="margin: 0;" class="container ">

        <%- include("../../views/partials/admin/sidebar")%>
            <div class="main-content">
                <div class="top-bar">
                    Furniture.
                  
                </div>

                
                <div class="search-container">
                    <form action="/admin/User" method="GET" style="display: flex; gap: 10px; flex: 1;">
                        <input type="text" name="search" class="search-input" placeholder="Search users"
                            value="<%= typeof search !== 'undefined' ? search : '' %>">

                        <!-- Search button -->
                        <button type="submit" class="search-button">Search</button>

                        <!-- Reset button -->
                        <button type="button" class="search-button bg-secondary text-white"
                            onclick="resetSearch()">Reset</button>
                    </form>
                </div>


                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Block</th>

                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=0;i<userData.length;i++){%>
                            <tr>
                                <td>
                                    <%=userData[i].name%>
                                </td>
                                <td>
                                    <%=userData[i].email%>
                                </td>

                                <% if (userData[i].isBlocked===false) { %>
                                    <td>
                                        <a href="#" class="btn-update"
                                            onclick="confirmAction('<%= userData[i]._id %>', 'block')">Block</a>
                                    </td>
                                    <% } else { %>
                                        <td>
                                            <a href="#" class="btn-update"
                                                onclick="confirmAction('<%= userData[i]._id %>', 'unblock')">Unblock</a>
                                        </td>
                                        <% } %>


                            </tr>
                            <%}%>
                    </tbody>

                </table>

                <div class="pagination">
                    <button class="pagination-button" onclick="changePage(`<%= currentPage - 1 %>`)" <%=currentPage===1
                        ? 'disabled' : '' %>>Previous</button>

                    <% for (let p=1; p <=totalPages; p++) { %>
                        <button class="pagination-button <%= currentPage === p ? 'active' : '' %>"
                            onclick="changePage(`<%= p %>`)">
                            <%= p %>
                        </button>
                        <% } %>

                            <button class="pagination-button" onclick="changePage(`<%= currentPage + 1 %>`)"
                                <%=currentPage===totalPages ? 'disabled' : '' %>>Next</button>
                </div>


            </div>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                function confirmAction(userId, actionType) {
                    const actionText = actionType === 'block' ? 'block this user' : 'unblock this user';
                    const actionUrl = actionType === 'block'
                        ? `/admin/blockUser?id=${userId}`
                        : `/admin/unblockUser?id=${userId}`;

                    Swal.fire({
                        title: `Are you sure?`,
                        text: `Do you really want to ${actionText}?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, proceed!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = actionUrl;
                        }
                    });
                }



                function changePage(page) {
                    const search = document.querySelector(".search-input")?.value || "";
                    window.location.href = `/admin/User?search=${encodeURIComponent(search)}&page=${page}`;
                }

                function resetSearch() {
                    window.location.href = "/admin/User";
                }
            </script>


</body>

</html>