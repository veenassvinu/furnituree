<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%);
            color: #333;
            min-height: 100vh;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .menu-toggle {
            display: none;
            background: none;
            border: none;
            color: #333;
            font-size: 20px;
            cursor: pointer;
            margin-right: 15px;
        }

        .menu-icon {
            width: 25px;
            height: 18px;
            position: relative;
            cursor: pointer;
        }

        .menu-icon span {
            display: block;
            width: 100%;
            height: 2px;
            background: #333;
            margin: 4px 0;
            transition: 0.3s;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            position: fixed;
            left: 0;
            top: 60px;
            height: calc(100vh - 60px);
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            z-index: 999;
            border-right: 1px solid rgba(255, 255, 255, 0.2);
        }

        .nav-item {
            display: block;
            padding: 15px 20px;
            color: #333;
            text-decoration: none;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-item:hover {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(135deg, #2c7a7b, #2c7a7b);
            color: white;
            box-shadow: 0 4px 15px #2c7a7b;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 30px;
            min-height: calc(100vh - 60px);
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .page-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ffffff, #2c7a7b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .page-header p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
        }

        /* Order Details Card */
        .order-details {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease;
        }

        .order-details:hover {
            transform: translateY(-5px);
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .detail-card {
            background: linear-gradient(135deg, #f8f9ff, #fff);
            border-radius: 15px;
            padding: 20px;
            border: 1px solid rgba(102, 126, 234, 0.1);
            transition: all 0.3s ease;
        }

        .detail-card:hover {
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

        .detail-item {
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

        .detail-item label {
            font-weight: 600;
            color: #2c7a7b;
            min-width: 120px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .detail-item span {
            color: #333;
            font-weight: 500;
            word-break: break-word;
        }

        /* Status Update Section */
        .status-update-card {
            background: linear-gradient(135deg, #2c7a7b, #2c7a7b);
            color: white;
            border-radius: 20px;
            padding: 25px;
            margin: 20px 0;
            box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
        }

        .status-update-card h3 {
            margin-bottom: 20px;
            font-size: 1.3rem;
            font-weight: 600;
        }

        .status-form {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

        .status-select {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 20px;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 200px;
        }

        .status-select:focus {
            outline: none;
            border-color: rgba(255, 255, 255, 0.5);
            background: rgba(255, 255, 255, 0.15);
        }

        .status-select option {
            background: #333;
            color: white;
            padding: 10px;
        }

        .update-btn {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .update-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
        }

        /* Current Status Badge */
        .current-status {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending { background: linear-gradient(45deg, #ffecd2, #fcb69f); color: #d2691e; }
        .status-processing { background: linear-gradient(45deg, #a8edea, #fed6e3); color: #4682b4; }
        .status-shipped { background: linear-gradient(45deg, #d299c2, #fef9d7); color: #8a2be2; }
        .status-delivered { background: linear-gradient(45deg, #89f7fe, #66a6ff); color: #006400; }
        .status-cancelled { background: linear-gradient(45deg, #ff9a9e, #fecfef); color: #dc143c; }
        .status-return-request { background: linear-gradient(45deg, #ffecd2, #fcb69f); color: #ff6347; }
        .status-returned { background: linear-gradient(45deg, #ff9a9e, #fad0c4); color: #8b0000; }

        /* Address Details */
        .address-details {
            background: linear-gradient(135deg, #f8f9ff, #fff);
            border-radius: 15px;
            padding: 20px;
            border: 1px solid rgba(102, 126, 234, 0.1);
            line-height: 1.6;
        }

        .address-details span {
            display: block;
            margin-bottom: 8px;
        }

        /* Items Table */
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 25px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .items-table th,
        .items-table td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid rgba(102, 126, 234, 0.1);
        }

        .items-table th {
            background: linear-gradient(135deg, #2c7a7b, #2c7a7b);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
        }

        .items-table tr:hover {
            background: rgba(102, 126, 234, 0.05);
        }

        .items-table tr:last-child td {
            border-bottom: none;
        }

        /* Back Link */
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #2c7a7b, #2c7a7b);
            color: white;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .back-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        /* Success Message */
        .success-message {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            font-weight: 500;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }

            .menu-toggle {
                display: block;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .status-form {
                flex-direction: column;
                align-items: stretch;
            }

            .status-select,
            .update-btn {
                width: 100%;
            }

            .page-header h2 {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <div class="success-message" id="successMessage">
        Order status updated successfully!
    </div>

    <header class="header">
        <button class="menu-toggle" onclick="toggleSidebar()">
            <div class="menu-icon">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </button>
    </header>

    <div class="sidebar" id="sidebar">
        <%- include("../../views/partials/admin/sidebar") %>
    </div>

    <div class="main-content">
        <div class="page-header">
            <h2>Order Management</h2>
            <p>View and manage order details</p>
        </div>

        <div class="order-details">
            <div class="details-grid">
                <div class="detail-card">
                    <div class="detail-item">
                        <label>Order ID:</label>
                        <span><%= order.orderId %></span>
                    </div>
                    <div class="detail-item">
                        <label>Date:</label>
                        <span><%= order.createdAt ? new Date(order.createdAt).toLocaleDateString() : 'N/A' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Customer:</label>
                        <span><%= order.name || 'N/A' %></span>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-item">
                        <label>Total Price:</label>
                        <span>‚Çπ<%= order.totalPrice ? order.totalPrice.toFixed(2) : '0.00' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Discount:</label>
                        <span>‚Çπ<%= order.discount ? order.discount.toFixed(2) : '0.00' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Final Amount:</label>
                        <span><strong>‚Çπ<%= (order.totalPrice - (order.discount || 0)).toFixed(2) %></strong></span>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-item">
                        <label>Payment:</label>
                        <span><%= order.paymentMethod || 'N/A' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Current Status:</label>
                        <span class="current-status status-<%= (order.status || 'pending').toLowerCase().replace(/\s+/g, '-') %>">
                            <%= order.status || 'Unknown' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Status Update Section -->
            <div class="status-update-card">
                <h3>üì¶ Update Order Status</h3>
                <form class="status-form" onsubmit="updateOrderStatus(event)">
                    <select class="status-select" id="statusSelect" name="status" required>
                        <option value="">Select Status</option>
                        <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>üü° Pending</option>
                        <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>üîÑ Processing</option>
                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>üöö Shipped</option>
                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>‚úÖ Delivered</option>
                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>‚ùå Cancelled</option>
                        <option value="Return Request" <%= order.status === 'Return Request' ? 'selected' : '' %>>üîÑ Return Request</option>
                        <option value="Returned" <%= order.status === 'Returned' ? 'selected' : '' %>>‚Ü©Ô∏è Returned</option>
                    </select>
                    <button type="submit" class="update-btn">Update Status</button>
                </form>
            </div>

            <!-- Address Details -->
            <div class="detail-card">
                <div class="detail-item">
                    <label>Delivery Address:</label>
                    <div class="address-details">
                        <% if (order.address) { %>
                            <span><strong>üìç Type:</strong> <%= order.address.addressType || 'N/A' %></span>
                            <span><strong>üë§ Name:</strong> <%= order.address.name || 'N/A' %></span>
                            <span><strong>üìû Phone:</strong> <%= order.address.phone || 'N/A' %></span>
                            <span><strong>üìß Email:</strong> <%= order.address.email || 'N/A' %></span>
                            <span><strong>üè¢ Landmark:</strong> <%= order.address.landMark || 'N/A' %></span>
                            <span><strong>üèôÔ∏è City:</strong> <%= order.address.city || 'N/A' %></span>
                            <span><strong>üåé State:</strong> <%= order.address.state || 'N/A' %></span>
                            <span><strong>üìÆ Pincode:</strong> <%= order.address.pincode || 'N/A' %></span>
                            <span><strong>üåç Country:</strong> <%= order.address.country || 'N/A' %></span>
                        <% } else { %>
                            <span>No address information available</span>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Items Table -->
            <table class="items-table">
                <thead>
                    <tr>
                        <th>üõçÔ∏è Product ID</th>
                        <th>üìä Quantity</th>
                        <th>üí∞ Price</th>
                        <th>üíµ Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td><%= item.productId %></td>
                            <td><%= item.quantity %></td>
                            <td>‚Çπ<%= item.price.toFixed(2) %></td>
                            <td><strong>‚Çπ<%= (item.quantity * item.price).toFixed(2) %></strong></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <a href="/admin/order" class="back-link">
                ‚Üê Back to Orders
            </a>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        function setActive(clickedItem) {
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => item.classList.remove('active'));
            clickedItem.classList.add('active');

            if (window.innerWidth <= 768) {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.remove('open');
            }
        }

        async function updateOrderStatus(event) {
            event.preventDefault();
            
            const statusSelect = document.getElementById('statusSelect');
            const newStatus = statusSelect.value;
            
            if (!newStatus) {
                alert('Please select a status');
                return;
            }

            try {
                const response = await fetch(`/admin/order/<%= order._id %>/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                });

                const result = await response.json();

                if (response.ok) {
                    // Show success message
                    const successMessage = document.getElementById('successMessage');
                    successMessage.style.display = 'block';
                    
                    // Update the current status display
                    const currentStatusElement = document.querySelector('.current-status');
                    currentStatusElement.textContent = newStatus;
                    currentStatusElement.className = `current-status status-${newStatus.toLowerCase().replace(/\s+/g, '-')}`;
                    
                    // Hide success message after 3 seconds
                    setTimeout(() => {
                        successMessage.style.display = 'none';
                    }, 3000);
                } else {
                    throw new Error(result.message || 'Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('Failed to update order status. Please try again.');
            }
        }

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('sidebar');
            const menuToggle = document.querySelector('.menu-toggle');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(event.target) &&
                !menuToggle.contains(event.target)) {
                sidebar.classList.remove('open');
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>

</html>