<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
     <link rel="stylesheet" href="/css/orderDetails.css">

</head>

<body>
    <div class="success-message" id="successMessage">
        Order status updated successfully!
    </div>

    <header class="header">
        <button class="menu-toggle" onclick="toggleSidebar()">
            <div class="menu-icon">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </button>
    </header>

    <div class="sidebar" id="sidebar">
        <%- include("../../views/partials/admin/sidebar") %>
    </div>

    <div class="main-content">
        <div class="page-header">
            <h2>Order Management</h2>
            <p>View and manage order details</p>
        </div>

        <div class="order-details">
            <div class="details-grid">
                <div class="detail-card">
                    <div class="detail-item">
                        <label>Order ID:</label>
                        <span><%= order.orderId %></span>
                    </div>
                    <div class="detail-item">
                        <label>Date:</label>
                        <span><%= order.createdAt ? new Date(order.createdAt).toLocaleDateString() : 'N/A' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Customer:</label>
                        <span><%= order.name || 'N/A' %></span>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-item">
                        <label>Total Price:</label>
                        <span>â‚¹<%= order.totalPrice ? order.totalPrice.toFixed(2) : '0.00' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Discount:</label>
                        <span>â‚¹<%= (order.discount !== undefined && order.discount !== null ? order.discount.toFixed(2) : '0.00') %></span>
                    </div>
                    <div class="detail-item">
                        <label>Final Amount:</label>
                        <span><strong>â‚¹<%= (order.totalPrice - (order.discount || 0)).toFixed(2) %></strong></span>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-item">
                        <label>Payment:</label>
                        <span><%= order.paymentMethod || 'N/A' %></span>
                    </div>
                    <div class="detail-item">
                        <label>Current Status:</label>
                        <span class="current-status status-<%= (order.status || 'pending').toLowerCase().replace(/\s+/g, '-') %>">
                            <%= order.status || 'Unknown' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Status Update Section -->
            <div class="status-update-card">
                <h3>ğŸ“¦ Update Order Status</h3>
                <form class="status-form" onsubmit="updateOrderStatus(event)">
                    <select class="status-select" id="statusSelect" name="status" required>
                        <option value="">Select Status</option>
                        <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>ğŸŸ¡ Pending</option>
                        <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>ğŸ”„ Processing</option>
                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>ğŸšš Shipped</option>
                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>âœ… Delivered</option>
                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>âŒ Cancelled</option>
                        <option value="Return Request" <%= order.status === 'Return Request' ? 'selected' : '' %>>ğŸ”„ Return Request</option>
                        <option value="Returned" <%= order.status === 'Returned' ? 'selected' : '' %>>â†©ï¸ Returned</option>
                    </select>
                    <button type="submit" class="update-btn">Update Status</button>
                </form>
            </div>

            <!-- Address Details -->
            <div class="detail-card">
                <div class="detail-item">
                    <label>Delivery Address:</label>
                    <div class="address-details">
                        <% if (order.address) { %>
                            <span><strong>ğŸ“ Type:</strong> <%= order.address.addressType || 'N/A' %></span>
                            <span><strong>ğŸ‘¤ Name:</strong> <%= order.address.name || 'N/A' %></span>
                            <span><strong>ğŸ“ Phone:</strong> <%= order.address.phone || 'N/A' %></span>
                            <span><strong>ğŸ“§ Email:</strong> <%= order.address.email || 'N/A' %></span>
                            <span><strong>ğŸ¢ Landmark:</strong> <%= order.address.landMark || 'N/A' %></span>
                            <span><strong>ğŸ™ï¸ City:</strong> <%= order.address.city || 'N/A' %></span>
                            <span><strong>ğŸŒ State:</strong> <%= order.address.state || 'N/A' %></span>
                            <span><strong>ğŸ“® Pincode:</strong> <%= order.address.pincode || 'N/A' %></span>
                            <span><strong>ğŸŒ Country:</strong> <%= order.address.country || 'N/A' %></span>
                        <% } else { %>
                            <span>No address information available</span>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Items Table -->
            <table class="items-table">
                <thead>
                    <tr>
                        <th>ğŸ›ï¸ Product</th>
                        <th>ğŸ“Š Quantity</th>
                        <th>ğŸ’° Price</th>
                        <th>ğŸ’µ Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td>
                                <% if (item.productId && item.productId.name) { %>
                                    <%= item.productId.name %>
                                    <% if (item.productId.images && item.productId.images[0]) { %>
                                        <img src="/Uploads/product-images/<%= item.productId.images[0] %>" alt="<%= item.productId.name %>" class="product-image" />
                                    <% } %>
                                <% } else { %>
                                    <%= item.productId || 'Product not available' %>
                                <% } %>
                            </td>
                            <td><%= item.quantity %></td>
                            <td>â‚¹<%= item.price.toFixed(2) %></td>
                            <td><strong>â‚¹<%= (item.quantity * item.price).toFixed(2) %></strong></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <a href="/admin/order" class="back-link">
                â† Back to Orders
            </a>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        function setActive(clickedItem) {
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => item.classList.remove('active'));
            clickedItem.classList.add('active');

            if (window.innerWidth <= 768) {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.remove('open');
            }
        }

        async function updateOrderStatus(event) {
            event.preventDefault();
            
            const statusSelect = document.getElementById('statusSelect');
            const newStatus = statusSelect.value;
            
            if (!newStatus) {
                alert('Please select a status');
                return;
            }

            try {
                const response = await fetch(`/admin/order/<%= order._id %>/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus })
                });

                const result = await response.json();

                if (response.ok) {
                    // Show success message
                    const successMessage = document.getElementById('successMessage');
                    successMessage.style.display = 'block';
                    
                    // Update the current status display
                    const currentStatusElement = document.querySelector('.current-status');
                    currentStatusElement.textContent = newStatus;
                    currentStatusElement.className = `current-status status-${newStatus.toLowerCase().replace(/\s+/g, '-')}`;
                    
                    // Hide success message after 3 seconds
                    setTimeout(() => {
                        successMessage.style.display = 'none';
                    }, 3000);
                } else {
                    throw new Error(result.message || 'Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('Failed to update order status. Please try again.');
            }
        }

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('sidebar');
            const menuToggle = document.querySelector('.menu-toggle');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(event.target) &&
                !menuToggle.contains(event.target)) {
                sidebar.classList.remove('open');
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>

</html>