    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
}

.orders-table thead th {
    background: #f8f9fa;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: #333;
    border-bottom: 2px solid #e9ecef;
